model ContactQuery {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  phone      String?
  subject    String
  message    String
  status     String   @default("new") // new, in-progress, resolved
  adminNotes String?
  createdAt  DateTime @default(now())
